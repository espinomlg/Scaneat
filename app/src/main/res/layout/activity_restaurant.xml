<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:text="NombreDel restaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_big"
        android:id="@+id/restaurant_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Tipos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_name"
        android:layout_toRightOf="@+id/restaurant_image"
        android:layout_toEndOf="@+id/restaurant_image"
        android:textSize="@dimen/text_normal"
        android:id="@+id/restaurant_types" />

    <TextView
        android:text="Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_types"
        android:layout_toRightOf="@+id/restaurant_image"
        android:layout_toEndOf="@+id/restaurant_image"
        android:textSize="@dimen/text_normal"
        android:id="@+id/restaurant_rating" />

    <TextView
        android:text="Open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restuarant_isopen"
        android:textSize="@dimen/text_big"
        android:layout_alignBaseline="@+id/restaurant_rating"
        android:layout_alignBottom="@+id/restaurant_rating"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_launcher"
        android:id="@+id/restaurant_image"
        android:layout_below="@+id/restaurant_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Tipos de cocina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_normal"
        android:id="@+id/restaurant_cuisine" />

   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/restaurant_cuisine"
       android:paddingBottom="@dimen/activity_vertical_margin"
       android:paddingTop="@dimen/activity_vertical_margin"
       android:paddingLeft="@dimen/activity_horizontal_margin"
       android:paddingRight="@dimen/activity_horizontal_margin"
       android:id="@+id/restaurant_tablelayout">

       <TableRow
           android:layout_marginBottom="@dimen/activity_vertical_margin">
           <TextView
               android:text="Detalles"
               android:layout_width="0px"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_normal" />

           <TextView
               android:text="Detalles"
               android:layout_width="0px"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_normal" />
       </TableRow>
       <TableRow
           android:layout_marginBottom="@dimen/activity_vertical_margin">
           <TextView
               android:text="Detalles"
               android:layout_width="0px"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_normal" />
           <TextView
               android:text="Detalles"
               android:layout_width="0px"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_normal" />
       </TableRow>
       <TableRow
           android:layout_marginBottom="@dimen/activity_vertical_margin">
           <TextView
               android:text="Detalles"
               android:layout_width="0px"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_normal" />
           <TextView
               android:text="Detalles"
               android:layout_width="0px"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_normal" />
       </TableRow>

   </TableLayout>

    <TextView
        android:text="Descripcion \n................\n..................\n................\n.............."
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/restaurant_tablelayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6" />


</RelativeLayout>